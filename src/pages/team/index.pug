extends ../../layout.pug

//- members -> [ {
//-     avatar,
//-     name,
//-     job,
//- } ]
mixin lead(key, category, avatar, name, job, spec, text, alsoHeader, members)
    .lead
        h4.lead__category!= category
        img.lead__avatar&attributes(imgAttrs(avatar, 216))
        h5.lead__name!= name
        p.lead__job!= job
        p.lead__spec!= 'специализация — ' + spec

        if text.indexOf('<p>') !== -1
            .lead__text!= text
        else
            p.lead__text!= text

        //- for mobile version
        +lead-members(
            key,
            alsoHeader,
            members
        )
        
mixin lead-members(key, alsoHeader, members)
    .lead-members
        h6.lead-members__header!= alsoHeader
        .lead-members__wrapper
            for member, i in members
                .lead-member(style='z-index: ' + (members.length - i) + ';')
                    img.lead-member__avatar&attributes(imgAttrs(member.avatar, 72))
                    .lead-member__info
                        .lead-member__name!= member.name
                        .lead-member__job!= member.job

