extends ../../layout.pug

mixin case-thumbnail(key, tech, name, desc, background, backgroundStyle)
    .case-thumbnail(style=("background: " + backgroundStyle))
        img(-lazy-src=(background + ".jpg"))
        .case-thumbnail__content
            h6!= tech
            h2!= name
            p!= desc

block body
    section.top
        .section-content
            +top-bar([ 'sticky', 'padding' ], { currentPage: "/case-odinmedia" })
    section.cases
        h1 Кейсы
        .case-thumbnails
            +case-thumbnail(
                "autoscaners",
                "webdev + UI/UX + Mobile",
                "autoscaners.ru",
                "поддержка и развитие e-commerce<br>инфраструктуры",
                "/assets/cases/thumbnail-autoscaners",
                ""
            )
            +case-thumbnail(
                "icartool",
                "UI/UX + mobile",
                "iCartool",
                "Мобильное приложение для тестирования<br>автомобильных аккумуляторов",
                "/assets/cases/thumbnail-icartool",
                ""
            )
            +case-thumbnail(
                "hakamadamk",
                "UI/UX + webdev",
                "Ирина Хакамада",
                "Разработка и техподдержка тура по Сибири<br>известного мотивационного спикера",
                "/assets/cases/thumbnail-hakamada",
                ""
            )
            +case-thumbnail(
                "launch",
                "UI/UX + Webdev",
                "Launch",
                "Сайт официального дилера крупнейшего<br>производителя систем автодиагностики",
                "/assets/cases/thumbnail-launch",
                ""
            )
            +case-thumbnail(
                "odinmedia",
                "UI/UX + webdev",
                "OdinMedia",
                "Сайт и SPA-каталог для международного<br>дистрибьютора медиа-контента",
                "/assets/cases/thumbnail-odinmedia",
                ""
            )
    +feedback-form([ 'section' ])
    +footer